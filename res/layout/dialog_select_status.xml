<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	style="@style/DialogContainer">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin_3"
        android:paddingLeft="@dimen/activity_horizontal_margin_3"
        android:paddingRight="@dimen/activity_horizontal_margin_3"
        android:paddingTop="@dimen/activity_vertical_margin_3" 
        android:background="@drawable/shape_select_status">

        <ListView
            android:id="@+id/LTVStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/list_selector"
            tools:listitem="@layout/status_list_item" >
        </ListView>

    </LinearLayout>
    
    <Button 
        android:id="@+id/IMBClose"
        android:layout_marginTop="@dimen/margin_close_btn"
        android:layout_marginRight="@dimen/margin_close_btn"
        android:layout_width="@dimen/zise_close_btn"
        android:layout_height="@dimen/zise_close_btn"
        android:background="@drawable/selector_close_btn"
        android:contentDescription="@string/contentDesc"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/x"/>

</RelativeLayout>